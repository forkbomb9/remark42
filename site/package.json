{
	"name": "reproxy",
	"version": "0.0.0",
	"repository": "https://github.com/umputun/remark42",
	"homepage": "https://remark42.com",
	"author": "Pavel Mineev <pavel@mineev.me>",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": ">= 14.15"
	},
	"scripts": {
		"dev": "run-s clean && run-p dev:*",
		"dev:css": "postcss ./src/styles.css -o .tmp/style.css -w",
		"dev:eleventy": "eleventy --serve --watch",
		"build": "cross-env NODE_ENV=production run-s clean && run-s build:* --print-label",
		"build:css": "postcss ./src/styles.css -o .tmp/style.css",
		"build:eleventy": "eleventy",
		"clean": "rm -rf build/*"
	},
	"devDependencies": {
		"@11ty/eleventy": "^0.12.1",
		"@11ty/eleventy-navigation": "^0.2.0",
		"@11ty/eleventy-plugin-syntaxhighlight": "^3.1.1",
		"@tailwindcss/typography": "^0.4.1",
		"autoprefixer": "^10.2.6",
		"cross-env": "^7.0.3",
		"cssnano": "^5.0.5",
		"date-fns": "^2.22.1",
		"eleventy-plugin-toc": "^1.1.0",
		"eslint": "^7.28.0",
		"html-minifier": "^4.0.0",
		"markdown-it": "^12.0.6",
		"markdown-it-anchor": "^7.1.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.3.0",
		"postcss-cli": "^8.3.1",
		"prettier": "^2.3.1",
		"tailwindcss": "^2.1.4"
	}
}
